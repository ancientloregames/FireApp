<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:fitsSystemWindows="true"
			  android:background="@color/colorPrimary"
			  tools:context="com.nimblemind.autoplus.ChatActivity"
	>

	<include layout="@layout/topbar"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@color/authMain"
		>
		<TextView
			android:id="@+id/textClientName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textStyle="bold"
			tools:text="@string/hintClientName"
			/>
		<TextView
			android:id="@+id/textAutoName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:text="@string/hintAutoName"
			/>
		<TextView
			android:id="@+id/textAutoPart"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textStyle="bold"
			tools:text="@string/hintAutoPart"
			/>
	</LinearLayout>
	<android.support.v7.widget.RecyclerView
		android:id="@+id/recycler"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:padding="10dp"
		android:background="@android:color/white"
		tools:listitem="@layout/client_list_item"
		/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="@color/authMain"
		>
		<EditText
			android:id="@+id/textField"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:hint="@string/hintTextField"
			/>
		<Button
			android:id="@+id/buttonSend"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/buttonSend"
			/>
	</LinearLayout>
</LinearLayout>