<?xml version="1.0" encoding="utf-8"?>
<com.nimblemind.autoplus.swipereveallayout.SwipeRevealLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="@dimen/recyclerItemPadding"
	app:dragEdge="right"
	>
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:layout_gravity="center"
		android:background="@color/colorPrimary"
		>
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="110dp"
			android:layout_gravity="right|center_vertical"
			android:adjustViewBounds="true"
			android:padding="15dp"
			android:src="@drawable/trashcan"
			android:contentDescription="@string/hintImage"
			/>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingStart="@dimen/globalActivityPadding"
			android:paddingLeft="@dimen/globalActivityPadding"
			android:layout_gravity="start|center_vertical"
			>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@android:color/white"
				android:text="@string/textRequestDeleted"
				/>
			<TextView
				android:id="@+id/buttonCancelDeletion"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:text="@string/buttonCancelDeletion"
				android:textColor="@android:color/white"
				android:background="@drawable/button_border_solid"
				/>
		</LinearLayout>
	</FrameLayout>
	<LinearLayout
		android:id="@+id/itemLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="@dimen/recyclerItemInnerPadding"
		android:background="@color/recyclerItem"
		>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				>
				<TextView
					android:id="@+id/sparePartView"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textStyle="bold"
					android:textSize="18sp"
					android:maxLines="1"
					android:ellipsize="end"
					android:paddingBottom="5dp"
					tools:text="@string/hintAutoPart"
					/>
				<TextView
					android:id="@+id/infoView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					tools:text="01 January, 12:00"
					android:textColor="@color/mainNewRequestButton"
					/>
			</LinearLayout>
			<com.nimblemind.autoplus.IconTextView
				android:id="@+id/autoNameView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="15sp"
				android:maxLines="1"
				android:ellipsize="end"
				android:drawableLeft="@drawable/asset_car"
				android:drawablePadding="@dimen/textDrawableDefaultIndent"
				tools:text="@string/hintAutoBrand"
				/>
			<com.nimblemind.autoplus.IconTextView
				android:id="@+id/notificationView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="15sp"
				android:drawableLeft="@drawable/asset_message_empty"
				android:drawablePadding="@dimen/textDrawableDefaultIndent"
				tools:text="@string/textNoMessages"
				/>
		</LinearLayout>
		<TextView
			android:id="@+id/newRequestButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/buttonCreateRequestByTemplate"
			android:textColor="@color/mainNewRequestButton"
			android:paddingTop="5dp"
			/>
	</LinearLayout>
</com.nimblemind.autoplus.swipereveallayout.SwipeRevealLayout>