<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:orientation="vertical"
			  android:layout_gravity="end"
			  android:layout_marginStart="@dimen/chatMessageOuterEndIndent"
			  android:layout_marginLeft="@dimen/chatMessageOuterEndIndent"
			  android:layout_marginTop="@dimen/chatMessageOuterTopIndent"
			  android:padding="@dimen/chatMessageInnerIndent"
			  android:background="@color/chatCollocutorMessage"
	>
	<TextView
		android:id="@+id/textInfo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end"
		android:textColor="@android:color/darker_gray"
		tools:text="@string/textMessageInfo"
		/>
	<TextView
		android:id="@+id/textMessage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="@dimen/chatMessageInnerIndent"
		tools:text="Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test"
		/>
</LinearLayout>